mixin select(name, title, options)
    .select
        .select__container 
            input(type="text", name= name, hidden)
            input(type="checkbox" name="open")
            .select__header
                span.select__title!= title
                span
                    img(src="../../../assets/svg/chevron.svg")
            ul.select__list 
                each option in options
                    if (typeof option === "object")
                        - const some = Object.entries(option)
                        //- li(data-vendor= option.vendor)= option.title 
                        li&attributes({["data-"+some[0][0]]:some[0][1]})= some[1][1]
                    else
                        li= option