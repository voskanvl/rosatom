.team-member
    height 100%
    &__image
        height 33vmin
        aspect-ratio 1
        position relative
        overflow hidden
        margin 0 auto
        & > *
            position absolute
            inset 0

        @media (max-width 1024px)
            height 20vmin
            
    &__front
        --circle-size 60%
        // clip-path circle(50% at 50% 50%)
        background #ECF0F3
        // background #000
        // mask-image linear-gradient(rgba(0, 0, 0, 1) 50%, transparent)
        mask-image radial-gradient( #0000 70%, #000 71%)
        width 100%
        height 100%

    &__back
        border-radius 50%
        box-shadow inset 10px 10px 15px #D1D9E6, inset -10px -10px 15px #FFFFFF

    &__img
        width 100%

    &__data
        margin-top 9px

    &__name
        text-align center
        font-weight 700
        font-size 21px
        color #1C376A

    &__post
        text-align center
        font-size 18px
