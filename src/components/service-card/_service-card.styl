@import "../../pages/sections/_service-center"
@import "../../sass/_variables"
.service-card
    &__container
        padding 2.5vh clamp(10px, 1.302083vw,25px)
        border-radius 33px
        background #ECF0F3
        box-shadow 1vw 1.8vh 3vmin #D1D9E6, -1vw -1.8vh 3vmin #FFFFFF
        height 100%
        display flex
        flex-direction column

        &:hover
            & > .service-card__title
                background-color #115DA1
                color #fff

        &--advantages
            &:hover
                & > .service-card__title
                    border-color #30A842
                    background-color #30A842
                    color #fff
            &[glass]
                @extend .data-card__container

    &__title
        padding 6px 19px
        border-radius 33px
        border 1px solid #115DA1
        transition background-color .5s
        width fit-content
        font-size clamp(13px,1.5vmax,20px)
        // font-size: 20px
        @media ({change_point1})
            font-size 16px

    &__list
        padding 0
        margin 0
        margin-top 1.9vh
        // font-size clamp(11px,1vmax,16px)
        font-size clamp(12px,1.5vmax,16px)
        overflow-y auto
        delete-scrollbar()
        @media ({change_point1})
            font-size 14px
