include ../accordion/accordion.pug
mixin menuList(arr)
    each j in arr
        if j.menu 
            li.list__item.list__item--big 
                span!= j.name
                ul.list--details     
                    each k in j.menu 
                        li.list__item.list__item--small
                            a(href=k.href)!= k.name
        else
            li.list__item.list__item--big
                a(href=j.href)!= j.name



nav.main-header
    .burger 
        ul.burger__list
            h2.burger__title Карта сайта
            .list
                +menuList(burger)
            img.cristal(src="../../../assets/svg/veil.svg")
        .burger__image

    .logo.logo--white

    .menu-reduced 
        ul.menu-reduced__list.list
            img.cristal(src="../../../assets/svg/veil.svg")
            +accordion(menu,"menu-reduced__item")
        span.menu-reduced__caption МЕНЮ

    ul.menu.menu--white
        each i in menu 
            li.menu__item
                ul.list
                    +menuList(i.menu)
                    img.cristal(src="../../../assets/svg/veil.svg")
                span= i.title
    .options 
        .options__search.options__search--white 
            img(src="../../../assets/svg/search.svg")
        .options__lk 
            a(href="#") ЛИЧНЫЙ КАБИНЕТ
        .options__international.options__international--white 
            a(href="#") Rus
            a(href="#") Eng



