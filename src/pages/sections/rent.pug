include ../../pug/splides.pug
include ../../components/service-card/service-card.pug
include ../../components/range/range.pug
include ../../components/tabs/tabs.pug
include ../../components/bread-crumbs/bread-crumbs.pug

.rent 
    .rent__container.container

        +bread-crumbs([{name: "Услуги", href:"/"}, {name: " Аренда готового сервера", href:"#"}])

        .rent__title.title.text-masked-element(style="--background: #303031") 
            p АРЕНДА
            p ОБОРУДОВАНИЯ


        +tabs(tabs) 
            .tabs__page(data-id="501" active="active")
                include ../../blocks/rent-tools/rent-tools.pug
            .tabs__page(data-id="502")
                include ../../blocks/rent-config/rent-config.pug

        .rent__title.title.text-masked-element(style="--background: #303031") АКЦИИ
        .rent__actions
            each i in actions 
                .convex
                    .rent__action
                        .rent__action-title= i.name 
                        ul.rent__action-list
                            each j in i.list 
                                li=j

        .rent__title.title.text-masked-element(style="--background: #303031") ЧТО ВХОДИТ В СТОИМОСТЬ
        ul.rent__include 
            each i in description
                li
                    img(src= i.icon, alt="")
                    p= i.caption



